{{> customerheader}}

<div class="container-fluid detailscon">
    <h2 class="page-header">Reservations</h2>
</div>
<div class="topgap">
<table id="example" class="table accountstable table-striped table-bordered" cellspacing="0" width="100%">
    <t>
        <tr>
            <th>Package</th>
            <th>Tour Length</th>
            <th>Departure Location</th>
            <th>Date</th>
            <th>Departure Time</th>
            <th>Cost - Adult</th>
            <th>Cost - Child</th>
            <th>Seat number</th>
            <th>Status</th>
        </tr>
    </thead>
    <tfoot>
        {{#print}}
        <tr>
            <td>{{name}}</td>
            <td>{{tourlength}}</td>
            <td>{{departurelocation}}</td>
            <td>{{moment packagedate format="YYYY-MM-DD"}}</td>
            <td>{{departuretime}}</td>
            <td>${{costadult}}</td>
            <td>${{costchild}}</td>
            <td>{{seatnumber}}</td>
            {{#if confirm}}
            <td>Confirmed   <a class="btn btn-danger" href="/customer/reservation/{{reservationid}}/cancel" role="button">Cancel</a></td>
            {{else}}
            <td><a class="btn btn-success" href="/customer/reservation/{{reservationid}}/confirm" role="button">Confirm</a>
                <a class="btn btn-danger" href="/customer/reservation/{{reservationid}}/cancel" role="button">Cancel</a></td>
            {{/if}}
        </tr>
        {{/print}}
    </tfoot>
</table>
</div>