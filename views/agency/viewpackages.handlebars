{{> agencyheader}}

<div class="container-fluid cont">
    <div class="container">
        <h2 class="headertext">Packages</h2>
         <div style="margin-bottom: 20px;"><a class="btn btn-primary" href="/agency/package/add" role="button">Add New</a></div>
        <div class="row">
            {{#print}}
            <div class="col-3 listpackagediv">
                <div class="listpackage">
                    <a class="" href="/agency/package/{{id}}" role="">
                <div class="listpackageimage"><img src="/uploads/{{image}}"></div>
                    <h5 class="listpackagetext">{{name}}</h5>
                    <p class="listpackagetext">Tour Length: {{tourlength}}</p>
                    <p class="listpackagetext">Departure Time: {{departuretime}}</p>
                    <p class="listpackagetext" style="float:left; padding-right:100px">Cost: ${{cost}}</p>
                    </a>
                    <a class="btn btn-success" href="/agency/package/{{id}}" role="button">Edit</a>
                </div>
            </div> 
            {{/print}}
        </div>
    </div>
</div>
