{{> adminheader}}

<div class="container-fluid cont">
  <div class="container">
  <div class="row">
    <div class="col-lg-12 addpackForm">
      <h2 class="addpackheadertext">Customer Details</h2>
  {{#print}}
  <div class="row">
    <div class="col">
        <div class="form-group">
          <label>Email</label>
          <input readonly  type="email" value="{{email}}" class="form-control" placeholder="Email" name="email" required>
        </div>
        <div class="form-group">
          <label>First Name</label>
          <input readonly  type="text" value="{{firstname}}" class="form-control" placeholder="First Name" name="firstname" required>
        </div>
        <div class="form-group">
          <label>Last Name</label>
          <input readonly type="text" value="{{lastname}}" class="form-control" placeholder="Last Name" name="lastname" required>
        </div>
        <div class="form-group">
          <label>Gender</label>
          <input readonly type="text" value="{{gender}}" class="form-control" placeholder="Gender" name="gender" required>
        </div>
        <div class="form-group">
          <label>Phone Number</label>
          <input readonly type="text" value="{{phonenumber}}" class="form-control" placeholder="XXXXXXXXXX" name="phonenumber" maxlength="10" required>
        </div>
        <div class="form-group">
          <label>Date of Birth</label>
          <input readonly type='text' value="{{moment dateofbirth format="YYYY-MM-DD"}}" id="datepicker" class="form-control"  name='dateofbirth' placeholder='YYYY-MM-DD' required>
        </div>
    </div>
    <div class="col">
      <form method="post" action="/admin/accounts/customer/{{id}}/save">
      <div class="row">
        <div class="col">
          <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true"></i> Save Changes</button>
        </div>
        <div class="col">
           <a class="btn btn-danger" href="/admin/accounts/customer/{{id}}/delete" role="button"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete Customer</a>
        </div>
      </div>
      <div class="form-group status">
          <label>Status</label>
          <select class="form-control" name="active" required>
            {{#if active}}
              <option value="1">Active</option>
              <option value="0">Not Active</option>
            {{else}}
              <option value="0">Not Active</option>
              <option value="1">Active</option>
            {{/if}}
        </select>
        </div>
        <div class="form-group">
          <label>Email verification</label>
          <select readonly class="form-control" name="verification" required>
            {{#if verification}}
              <option value="1">Verified</option>
            {{else}}
              <option value="0">Not Verified</option>
            {{/if}}
        </select>
        </div>
        <div class="form-group">
          <label>Street Number</label>
          <input readonly type="text" value="{{streetnumber}}" class="form-control" placeholder="Street Number" name="streetnumber" required>
        </div>
        <div class="form-group">
          <label>Street Name</label>
          <input readonly type="text" value="{{streetname}}" class="form-control" placeholder="Street Name" name="streetname" required>
        </div>
        <div class="form-group">
          <label>City</label>
          <input readonly type="text" value="{{city}}" class="form-control" placeholder="City" name="city" required>
        </div>
    </div>
  </div>  
   </form>
  {{/print}}
</div>
</div>
</div>
</div>

